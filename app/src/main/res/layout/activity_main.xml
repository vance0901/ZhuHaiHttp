<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="WanAndroid登录示例"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <!-- WanAndroid登录区域 -->
        <LinearLayout
            android:id="@+id/login_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f5f5f5"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="用户名"
                android:inputType="text"
                android:layout_marginBottom="8dp"
                android:padding="12dp"
                android:background="@android:color/white" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="密码"
                android:inputType="textPassword"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:background="@android:color/white" />

            <Button
                android:id="@+id/btn_wanandroid_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="登录WanAndroid"
                android:textColor="@android:color/white"
                android:background="#4CAF50"/>
        </LinearLayout>
        
        <!-- x业xxxxx登录区域 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="x业xxxxx登录示例(JSON)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>
            
        <LinearLayout
            android:id="@+id/xxxx_login_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#e6f7ff"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/et_xxxx_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="手机号"
                android:text="13528789021"
                android:inputType="phone"
                android:layout_marginBottom="8dp"
                android:padding="12dp"
                android:background="@android:color/white" />

            <EditText
                android:id="@+id/et_xxxx_verify_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="验证码"
                android:text="889199"
                android:inputType="number"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:background="@android:color/white" />

            <Button
                android:id="@+id/btn_xxxx_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="登录x业xxxxx(JSON)"
                android:textColor="@android:color/white"
                android:background="#2196F3"/>
        </LinearLayout>
        
        <!-- 用户信息更新区域 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="用户信息更新示例(PUT-JSON)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>
            
        <LinearLayout
            android:id="@+id/user_update_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffedd8"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <EditText
                    android:id="@+id/et_user_id"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="用户ID"
                    android:text="0"
                    android:inputType="number"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="8dp"
                    android:padding="12dp"
                    android:background="@android:color/white" />
                    
                <EditText
                    android:id="@+id/et_user_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="用户名"
                    android:text=""
                    android:inputType="text"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="8dp"
                    android:padding="12dp"
                    android:background="@android:color/white" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <EditText
                    android:id="@+id/et_update_phone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="手机号"
                    android:text=""
                    android:inputType="phone"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="8dp"
                    android:padding="12dp"
                    android:background="@android:color/white" />
                    
                <EditText
                    android:id="@+id/et_verify_code"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="验证码"
                    android:text=""
                    android:inputType="text"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="8dp"
                    android:padding="12dp"
                    android:background="@android:color/white" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <EditText
                    android:id="@+id/et_birth"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="出生日期"
                    android:text=""
                    android:inputType="date"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="8dp"
                    android:padding="12dp"
                    android:background="@android:color/white" />
                    
                <Spinner
                    android:id="@+id/spinner_sex"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:entries="@array/sex_options"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="8dp"
                    android:padding="12dp"
                    android:background="@android:color/white" />
            </LinearLayout>
            
            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="地址"
                android:text=""
                android:inputType="textPostalAddress"
                android:layout_marginBottom="8dp"
                android:padding="12dp"
                android:background="@android:color/white" />
                
            <EditText
                android:id="@+id/et_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="地区"
                android:text=""
                android:inputType="text"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:background="@android:color/white" />

            <Button
                android:id="@+id/btn_update_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="更新用户信息(PUT)"
                android:textColor="@android:color/white"
                android:background="#FF9800"/>
        </LinearLayout>


            


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="HTTP请求示例"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_get_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GET请求示例" />

        <Button
            android:id="@+id/btn_post_form_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POST表单请求示例" />

        <Button
            android:id="@+id/btn_post_json_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POST JSON请求示例" />

        <Button
            android:id="@+id/btn_put_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PUT请求示例" />



        <Button
            android:id="@+id/btn_batch_delete_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DELETE请求示例(批量:大于等于1个)" />

        <!-- 请求头设置区域 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="HTTP请求头设置"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>
            
        <LinearLayout
            android:id="@+id/header_settings_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#e6fff5"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <EditText
                    android:id="@+id/et_header_key"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="请求头名称"
                    android:text="token"
                    android:inputType="text"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="8dp"
                    android:padding="12dp"
                    android:background="@android:color/white" />
                    
                <EditText
                    android:id="@+id/et_header_value"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="请求头值"
                    android:text="a373805dc17744bfb9eb0d77bfcfe045"
                    android:inputType="text"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="8dp"
                    android:padding="12dp"
                    android:background="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <Button
                    android:id="@+id/btn_add_header"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="添加请求头"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="4dp"
                    android:background="#009688"/>
                    
                <Button
                    android:id="@+id/btn_clear_headers"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="清除该头"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="4dp"
                    android:background="#E91E63"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>